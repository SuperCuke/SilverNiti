@model SilverNiti.Core.ViewModels.ContactFormViewModel

@if (TempData["success"] == null)
{
    <section class="contact-section">
        <div class="auto-container">
            <div class="contact-inner">

                <!--Contact Form-->
                <div class="contact-form default-form">

                    @using (Html.BeginUmbracoForm<SilverNiti.Core.Controllers.Surface.ContactFormController>("HandleFormSubmit"))
                    {
                        <div class="row clearfix">

                            <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                @Html.TextBoxFor(m => m.Name)
                                @Html.ValidationMessageFor(m => m.Name)
                                @*<input type="text" name="username" value="" placeholder="Your Name *" required>*@
                            </div>

                            <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                @Html.TextBoxFor(m => m.Email)
                                @Html.ValidationMessageFor(m => m.Email)
                                @*<input type="email" name="email" value="" placeholder="Your Email *" required>*@
                            </div>

                            @*<div class="form-group col-md-12 col-sm-12 col-xs-12">
                                @Html.TextBoxFor(m => m.)
                                @Html.ValidationMessageFor(m => m.Subject)
                                <input type="text" name="subject" value="" placeholder="Subject">
                            </div>*@

                            <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                @Html.TextAreaFor(m => m.Message)<br />
                                @Html.ValidationMessageFor(m => m.Message)
                                @*<textarea name="message" placeholder="Message"></textarea>*@
                            </div>
                            <div class="form-group text-center col-md-12 col-sm-12 col-xs-12">
                                <button type="submit" class="theme-btn btn-style-one">Send</button>
                            </div>
                        </div>
                    }
                </div>
                <!--End Contact Form-->

            </div>
        </div>
    </section>
}
else
{
    <p>
        Thank you.  We'll be in touch
    </p>
}
